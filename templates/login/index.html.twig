{% extends 'base.html.twig' %}

{% block body %}
    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success my-1 mx-3" role="alert">{{ flash_message }}</div>
    {% endfor %}
    <form method="post" class='mt-4'>
        <label for="username">Email :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" autocomplete='email'>

        <label for="password">Mode de passe :</label>
        <input type="password" id="password" name="_password" autocomplete='current-password'>

        <input type="hidden" name="_target_path" value="/">

        <button type="submit">login</button>
    </form>

    {% if error %}
        <div class='mt-3 text-danger'>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class='mt-3 d-flex'>
        Vous n'avez pas de compte ?&nbsp;<a class="nav-link link-primary" href="{{ path('app_register') }}">Cr√©er un compte ici</a>
    </div>
{% endblock %}
